<% layout("layouts/boilerplate") %>

<form 
    method="POST" 
    class="needs-validation" 
    novalidate action="/listings/<%= listing._id %>?_method=PUT" 
    enctype="multipart/form-data">
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Listing</h3>

            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input name="listing[title]" class="form-control" value="<%= listing.title %>" type="text" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a title.</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea name="listing[description]" rows="10" required class="form-control"><%= listing.description %></textarea>
                <div class="valid-feedback">Nice description!</div>
                <div class="invalid-feedback">Please provide a description.</div>
            </div>

            <div class="mb-3 col-8 row mt-3">
                Original Listing Image <br>
                <img src="<%= originalImageUrl %>">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload new Image</label>
                <input name="listing[image]" class="form-control" type="file">
                <div class="valid-feedback">Nice Image!</div>
                <div class="invalid-feedback">Please provide a Image url.</div>
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="country" class="form-label">Country:</label>
                    <input required name="listing[country]" class="form-control" value="<%= listing.country %>" type="text">
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a country.</div>
                </div>

                <div class="mb-3 col-md-8">
                    <label for="price" class="form-label">Price:</label>
                    <input required name="listing[price]" class="form-control" value="<%= listing.price %>" type="number">
                    <div class="valid-feedback">Price is valid!</div>
                    <div class="invalid-feedback">Please enter a valid price.</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location:</label>
                <input required name="listing[location]" class="form-control" value="<%= listing.location %>" type="text">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a location.</div>
            </div>

            <button class="btn btn-dark edit-btn mt-3" type="submit">Add</button>

        </div>
    </div>
</form>
